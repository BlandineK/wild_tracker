{{#partial "content"}}
 <body>
 <h2>Add animal</h2>
 <form action="/animals/new" method="post">
   <div class="form-group">
     <label for="name">Name the animal: </label>
     <input type="text" name="name" class="form-control" required>
   </div>
   <input type="checkbox" name="endangered" value="yes">

     <div class="form-group reveal-if-active">
       <label for="health">Health</label>
       <select class="form-control" name="health">
         <option>$HEALTH_HEALTHY</option>
         <option>$HEALTH_OKAY</option>
         <option>$HEALTH_ILL</option>
       </select>
     </div>
     <div class="form-group reveal-if-active">
         <label for="age">Age </label>
         <select class="form-control" name="age">
           <option>$AGE_NEWBORN</option>
           <option>$AGE_YOUNG</option>
           <option>$AGE_ADULT</option>
         </select>
       </div>
{{!--        <button type="submit" name="button" class="btn btn-primary">Add Animal</button> --}}
   </form>
   </body>
   {{/partial}}
   {{>layout.hbs}}